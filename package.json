{
  "name": "chat-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "clean": "rm -rf .next && rm -rf node_modules",
    "ins": "pnpm install && prisma generate",
    "ins:clean": "pnpm clean && pnpm install && prisma generate",
    "dev:clean": "pnpm ins:clean && pnpm run dev",
    "build": "next build",
    "build:clean": "pnpm ins:clean && pnpm run build",
    "start": "next start",
    "serve": "pnpm build && pnpm start",
    "serve:clean": "pnpm build:clean && pnpm start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx,mjs,js,jsx,md,mdx,css,yaml,yml}\"",
    "check": "prettier --check \"**/*.{ts,tsx,mjs,js,jsx,md,mdx,css,yaml,yml}\"",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "globals": "^16.2.0",
    "next": "15.3.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.0",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.29.0",
    "@hookform/resolvers": "^5.1.1",
    "@next/eslint-plugin-next": "^15.3.3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
